        {
            "name": "t6 Full Suite",
            "tests": [
                {
                	"name": "can create a User",
                	"description": "create a User",
                    "api_calls": [
                        {
                        	"request": "POST /v2.0.1/users",
                            "params": {
                                "email": "m.lory@free.fr",
                                "firstName": "My FirstName {{$run_id}}",
                                "lastName": "My LastName"
                            },
                            "assert": [],
                            "save": {
                                "saved.key": "body.token.key",
                                "saved.secret": "body.token.secret",
                                "saved.token": "body.token.token",
                                "saved.user_id": "body.user.data.id",
                                "saved.subscription_date": "body.user.data.attributes.subscription_date",
                                "saved.username": "body.user.data.attributes.email"
                            },
                            "status": "201"
                        }
                    ]
                },
                {
                	"name": "can create a Token for that User from API Key/Secret",
                    "description": "create a Token for that User from API Key/Secret",
                    "api_calls": [
                        {
                        	"request": "POST /v2.0.1/users/me/token",
                            "params": {
                                "key": "{{saved.key}}",
                                "secret": "{{saved.secret}}"
                            },
                            "save": {
                                "saved.bearerFromKS": "body.token"
                            },
                            "status": "200"
                        }
                    ]
                },
                {
                	"name": "set password to that User",
                    "description": "set password",
                    "api_calls": [
                        {
                        	"request": "PUT /v2.0.1/users/{{saved.user_id}}",
                            "headers": {
                                "Authorization": "Bearer {{saved.bearerFromKS}}"
                            },
                            "params": {
                                "password": "{{$run_id}}"
                            },
                            "status": "200",
                            "assert": {
        	                    "select": "body.message",
        	                    "equal": "Successfully updated"
        	                }
                        }
                    ]
                },
